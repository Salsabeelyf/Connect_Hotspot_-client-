<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.salsabeel.connect_hotspot_client.MainActivity">

    <Button
        android:id="@+id/connectBtn"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false"
        android:text="Connect"
        android:textAllCaps="false"
        android:layout_below="@+id/ipET"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connectBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/messageTv" />

    <EditText
        android:id="@+id/ipET"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="QuadCopter Ip address "
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:text="192.168.43.1"
        android:textAlignment="center" />

    <!-- Uncomment this to send messages to server
    <Button
        android:id="@+id/sendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msgET"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:text="Send message" />

    <EditText
        android:id="@+id/msgET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connectBtn"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Message"
        android:inputType="textPersonName"
        android:text="Message"
        android:textAlignment="center" />
    -->

</RelativeLayout>
